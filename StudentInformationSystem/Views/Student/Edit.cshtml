	<div class="form-group">
		<label asp-for="Name" class="control-label">Name</label>
		<input asp-for="Name" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Age" class="control-label">Name</label>
		<input asp-for="Age" class="form-control" />
	</div>
	<div class="form-group">
